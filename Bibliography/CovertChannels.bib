@article{Liu2007aa,
	Abstract = {A new steganographic method for data hiding in Microsoft Word documents by a change tracking technique is proposed. The data embedding is disguised such that the stegodocument appears to be the product of a collaborative writing effort. Text segments in the document are degenerated, mimicking to be the work of an author with inferior writing skills, with the secret message embedded in the choices of degenerations. The degenerations are then revised with the changes being tracked, making it appear as if a cautious author is correcting the mistakes. The change tracking information contained in the stegodocument allows the original cover, the degenerated document, and, hence, the secret message to be recovered. The extra change tracking information added during message embedding is vital in a normal collaboration scenario, and so hinders ignorant removals by skeptics. Experiments demonstrate the feasibility of the proposed method},
	Address = {USA},
	Annote = {- Steganography is a study of techniques that embed secret information imperceptibly into a cover medium for the purpose of security protection or covert communication.
- In this paper, a new steganographic method is proposed in which data embedding is disguised to be the product of a collaborative document authoring effort.
- The basic idea of the proposed method is to degenerate the contents of a cover document D to arrive at another document D'
by embedding a secret message M in D during the transformation process. 
- The degeneration introduces errors into the degenerated document D' such that the degenerated document appears to be a preliminary work by a virtual author A' , which is to be revised later by another author A. 
- A stegodocument S is then produced from D' by revising D' back to D with the changes being tracked, making it appear as if author A is correcting the errors in D'.},
	Author = {T.Y. Liu and W.H. Tsai},
	Date-Added = {2010-05-10 09:22:14 -0400},
